FROM eclipse-temurin:17-centos7 as build
RUN mkdir /app_build
COPY . /app_build

WORKDIR /app_build

RUN ./gradlew clean build -p spring-boot-monitoring

FROM eclipse-temurin:17-centos7

RUN mkdir /app
RUN mkdir /app/resources

COPY --from=build /app_build/spring-boot-monitoring/build/libs/*-monitoring*T.jar /app/app-monitoring.jar
COPY --from=build /app_build/spring-boot-monitoring/src/main/resources/ /app/resources/

WORKDIR /app

CMD ["sh", "-c", "java -jar app-monitoring.jar"]
